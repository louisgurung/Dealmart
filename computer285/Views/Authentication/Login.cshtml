<style>
    body {
        background: linear-gradient(to left, #ffefba, #ffffff);
    }
</style>

@model computer285.Models.User

@{
    ViewBag.Title = "Login";
}
<div class="container" style="margin-left: 35%">
    <div class="row" style="color:green;">
        <div class="container">
            <div class="col-md-12">
                <div class="col-md-4" style="border-style: groove;">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <h3 class="text-center">Login</h3>
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                            <hr />
                            <div class="form-group">
                                <label><i class="fas fa-user"></i> Username</label>
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><i class="fas fa-key"></i> Password</label>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <br />
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                    Remember Me
                                </label>
                            </div>
                            <div class="text-right">
                                <a class="text-right"> Forgot Password?</a>
                            </div>
                            <button class="btn btn-success btn-block" type="submit">Log In</button>
                        </fieldset>
                        <br />
                    }
                </div>
            </div>
        </div>
    </div>
</div>


